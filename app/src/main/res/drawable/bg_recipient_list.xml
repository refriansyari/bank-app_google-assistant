<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border -->
    <item>
        <shape>
            <solid android:color="#C3C1C1"/> <!-- Set your desired border color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Background -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape>
            <solid android:color="@color/white"/> <!-- Set your desired background color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

</layer-list>
